<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#6200EE" />  <!-- color when button is checked -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- background color when button is not checked -->
            <stroke android:color="#6200EE" android:width="2dp" />  <!-- border color when button is not checked -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
