<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".ui.dosen.home.DosenHomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <!-- Profile Picture -->
                        <ImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="16dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/desc_profile"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile" />

                        <!-- Name Field -->
                        <TextView
                            android:id="@+id/tv_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/iv_profile"
                            android:text="@string/info_name"
                            android:textColor="@color/gray2"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@id/tv_name_title"
                            android:layout_marginEnd="8dp"
                            android:layout_toEndOf="@id/iv_profile"
                            android:background="@drawable/bg_text"
                            android:gravity="center|start"
                            android:padding="6dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            tools:text="Lorem Ipsum" />

                        <!-- NIM Field -->
                        <TextView
                            android:id="@+id/tv_nip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_name"
                            android:layout_marginTop="4dp"
                            android:layout_toEndOf="@id/iv_profile"
                            android:text="@string/info_nip"
                            android:textColor="@color/gray2"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_nip"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@id/tv_nip_title"
                            android:layout_marginEnd="8dp"
                            android:layout_toEndOf="@id/iv_profile"
                            android:background="@drawable/bg_text"
                            android:gravity="center|start"
                            android:padding="6dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            tools:text="Lorem Ipsum" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="8dp"
                        android:src="@drawable/ic_down" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_category"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/cv_profile"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_category"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/home_category"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_category"
                        android:text="@string/home_category"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_show"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/cv_category"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_show"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/home_show"
                        android:padding="8dp"
                        android:src="@drawable/ic_library" />

                    <TextView
                        android:id="@+id/tv_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_show"
                        android:text="@string/home_show"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_approval"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/cv_show"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_approval"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/home_approval"
                        android:src="@drawable/ic_assignment" />

                    <TextView
                        android:id="@+id/tv_approval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_approval"
                        android:text="@string/home_approval"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>