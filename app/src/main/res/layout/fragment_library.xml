<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mahasiswa.library.LibraryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Category Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_tanaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_komoditas" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_peenyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_penyakit" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_pathogen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_pathogen" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp">

            <!-- Configure spinner here -->

        </Spinner>

        <!-- RecyclerView for Grid/List View -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="1"
            tools:listitem="@layout/item_approval_list"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>