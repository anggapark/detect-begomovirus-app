<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scan_illust" />
            </androidx.cardview.widget.CardView>

            <!-- Uploader detail  -->
            <LinearLayout
                android:id="@+id/ll_uploader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_image"
                android:background="@drawable/bg_button"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_uploader"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/desc_profile"
                    android:src="@drawable/ic_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_uploader_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_name"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_uploader_nim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/desc_nim"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <!-- Komoditas Input -->
            <TextView
                android:id="@+id/tv_komoditas_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_uploader"
                android:layout_marginTop="16dp"
                android:text="@string/title_komoditas"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_komoditas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_komoditas_title"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_text"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_komoditas"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="16sp" />


            <!-- Penyakit Input -->
            <TextView
                android:id="@+id/tv_penyakit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_komoditas"
                android:layout_marginTop="16dp"
                android:text="@string/title_penyakit"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_penyakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_penyakit_title"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_text"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_penyakit"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="16sp" />


            <!-- Kategori Pathogen Input -->
            <TextView
                android:id="@+id/tv_kategori_pathogen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_penyakit"
                android:layout_marginTop="16dp"
                android:text="@string/title_kategori_pathogen"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_kategori_pathogen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kategori_pathogen_title"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_text"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_kategori_pathogen"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="16sp" />


            <!-- Pathogen Input -->
            <TextView
                android:id="@+id/tv_pathogen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kategori_pathogen"
                android:layout_marginTop="16dp"
                android:text="@string/title_pathogen"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pathogen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pathogen_title"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_text"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_pathogen"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="16sp" />


            <!-- Gejala Input -->
            <TextView
                android:id="@+id/tv_gejala_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pathogen"
                android:layout_marginTop="16dp"
                android:text="@string/title_gejala"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gejala_title"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_text"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_gejala"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="16sp" />

            <!-- Dataset Acuan Input -->
            <TextView
                android:id="@+id/tv_dataset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gejala"
                android:layout_marginTop="16dp"
                android:text="@string/title_dataset"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dataset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dataset_title"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_text"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_gejala"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="16sp" />

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/tv_desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dataset"
                android:layout_marginTop="16dp"
                android:text="@string/title_deskripsi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/tv_desc_title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_text"
                android:drawablePadding="10dp"
                android:gravity="top|start"
                android:hint="@string/hint_gejala"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="16sp" />

        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>