<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Picture -->
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc_profile"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_profile_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:text="@string/profile_image"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Personal Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Personal Info Title -->
                <TextView
                    android:id="@+id/tv_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/personal_info"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Name Field -->
                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_personal"
                    android:text="@string/info_name"
                    android:textColor="@color/gray2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/tv_name_title"
                    android:background="@drawable/bg_text"
                    android:drawableEnd="@drawable/ic_right"
                    android:gravity="center|start"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Lorem Ipsum" />

                <!-- NIM Field -->
                <TextView
                    android:id="@+id/tv_nim_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="10dp"
                    android:text="@string/info_nim"
                    android:textColor="@color/gray2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nim"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/tv_nim_title"
                    android:background="@drawable/bg_text"
                    android:drawableEnd="@drawable/ic_right"
                    android:gravity="center|start"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Lorem Ipsum" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactInfoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Account Info Title -->
                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/account_info"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Email Field -->
                <!--                <TextView-->
                <!--                    android:id="@+id/tv_email_title"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_below="@id/tv_account"-->
                <!--                    android:text="@string/info_email"-->
                <!--                    android:textColor="@color/gray2"-->
                <!--                    android:textSize="14sp" />-->

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/tv_account"
                    android:gravity="center|start"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="user@example.com" />

                <!-- Change Password -->
                <TextView
                    android:id="@+id/tv_password_change"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/tv_email"
                    android:layout_marginTop="10dp"
                    android:drawableEnd="@drawable/ic_right"
                    android:gravity="center|start"
                    android:padding="10dp"
                    android:text="@string/profile_password"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:drawableLeft="@drawable/ic_logout"
            android:padding="10dp"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
