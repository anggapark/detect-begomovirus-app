<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ipb.simpt.ui.mahasiswa.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.ipb.simpt.ui.mahasiswa.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.ipb.simpt.ui.mahasiswa.scan.ScanFragment"
        android:label="@string/title_scan"
        tools:layout="@layout/fragment_scan" />

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.ipb.simpt.ui.mahasiswa.library.LibraryFragment"
        android:label="@string/title_library"
        tools:layout="@layout/fragment_library" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ipb.simpt.ui.mahasiswa.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/navigation_profile_to_navigation_profile_edit"
            app:destination="@id/navigation_profile_edit">
            <argument
                android:name="field"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_profile_edit"
        android:name="com.ipb.simpt.ui.mahasiswa.profile.EditProfileFragment"
        android:label="@string/title_profile_edit"
        tools:layout="@layout/fragment_edit_profile">
        <argument
            android:name="field"
            app:argType="string" />
    </fragment>


</navigation>